!!! 5
html(lang="es")
	head
		title Resultados
		meta( name="tipo_contenido",  content="text/html;", http-equiv="content-type", charset="utf-8")
		link(rel="stylesheet", type="text/css", href!="{{ STATIC_URL }}css/style.css")
	body
		header
			figure
				img(src != "{{ STATIC_URL }}img/logo.png", alt="Logo", width="100%", height="100%" )
			div 
				p CloudSearch
			div.ba
				a(href="/schools/avanzado", title="Busqueda Avanzada") Busqueda Avanzada
		section#result
			form( method="GET", action="")
				input(type="text", placeholder="Buscar...", name="buscar")
				input(type="submit", value="Buscar")
			{% for result in results %}
			div.r
				a(href!="/schools/?id={{ result.id }}")
					span Nombre: {{ result.nombre }}
					span Rector: {{ result.rector }}
					span Direcci√≥n: {{ result.direccion }}
					span E-mail: {{ result.email }}

			{% empty %}
			p Not Found
			{% endfor %}